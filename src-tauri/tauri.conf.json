{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "HyperForge",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
			"path": {
				"all": true
			}, 
			"protocol": {
				"asset": true,
				"assetScope": ["**"]
			},
			"globalShortcut": {
				"all": true
			},
			"process": {
				"exit": true
			},
			"dialog": {
				"open": true
			}, 
			"fs": {
				"readFile": true
			}
    },
		"macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "shadow.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"    
		},
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
				"maximized": true,
        "title": "HyperForge",
        "width": 800,
        "height": 600,
				"hiddenTitle": true,
				"titleBarStyle": "Overlay",
				"transparent": true,
				"decorations": false

      }
    ],
		"systemTray": {
			"iconPath": "icons/128x128.png",
			"iconAsTemplate": true
		}
  }
}
